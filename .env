# ============================================
# ENVIRONMENT
# ============================================
VITE_APP_ENV=development
VITE_DEBUG=true

# ============================================
# APPLICATION
# ============================================
VITE_APP_NAME=E-Commerce Costa Rica
VITE_APP_DESCRIPTION=Tu tienda online de confianza

# ============================================
# API CONFIGURATION
# ============================================
# URL base del backend Laravel (sin trailing slash)
VITE_API_URL=http://localhost:8000/api

# Timeout en milisegundos (30 segundos)
VITE_API_TIMEOUT=30000

# Switch: true = usar API real, false = usar localStorage
# Útil para desarrollo sin backend activo
VITE_USE_API=false

# ============================================
# WHATSAPP INTEGRATION
# ============================================
# Número en formato internacional SIN + ni espacios
# Ejemplo: 50688888888 para Costa Rica
VITE_WHATSAPP_NUMBER=50689176111
VITE_WHATSAPP_COUNTRY_CODE=+506

# ============================================
# BUSINESS RULES
# ============================================
# Costo de envío en colones (CRC)
VITE_SHIPPING_COST=2000

# Umbral para envío gratis en colones (CRC)
VITE_FREE_SHIPPING_THRESHOLD=50000

# ============================================
# CURRENCY
# ============================================
VITE_CURRENCY_CODE=CRC
VITE_CURRENCY_SYMBOL=₡
VITE_CURRENCY_LOCALE=es-CR

# ============================================
# PAGINATION
# ============================================
VITE_PAGINATION_DEFAULT_SIZE=12
VITE_PAGINATION_MAX_SIZE=100
